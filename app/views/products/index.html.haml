.wrapper
  .header
    .header__left

  .main      
    %h1 ((商品在庫))
    = link_to '新商品登録', new_product_path
    = link_to 'マイページへ戻る', shop_session_path
    %table
      %tr
        %th 商品名 
        %th 価格
        %th その他
      %tbody
        - @products.each do |product|
          %tr
            %td= product.name
            %td= product.price
            %br
            %td= link_to '[詳細表示] ', product
            %br
            %td= link_to ' [編集]', edit_product_path(product)
            %br
            %td= link_to ' [削除]', product, method: :delete, data: { confirm: 'Are you sure?' }
  
    


