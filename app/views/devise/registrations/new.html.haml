.wrapper
  .header
    .back
      =link_to root_path do
        = icon('fas','home')
    .sign_up
      Sign up
    .sign_in
      = render "devise/shared/links"
    .header__left  
  .main
    .main__box
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          %br/
          = f.text_field :username, autofocus: true, placeholder:"Username",class: 'input-default'
        .field
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email",class: 'input-default'
        .field
          %br/
          = f.password_field :password, autocomplete: "new-password", placeholder:"Password (6 characters minimum)",class: 'input-default'
        .field
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"Password_confirmation",class: 'input-default'
        .field
          = f.label :user_image
          %br/
          = f.file_field :user_image ,autocomplete: "user_image"
        .actions
          = f.submit "Sign up",class:"submit"

          = form_for(:session, url: new_user_session_path ) do |f|
            = f.hidden_field :email, value: 'b1@gmail.com'
            = f.hidden_field :password, value: '111111'
            = f.submit 'テストログイン',class: "user-log-in"
      


