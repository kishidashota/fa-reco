.wrapper
  .header
    .back
      =link_to root_path do
        = icon('fas','home')
    .sign_up
      Sign up
    .sign_in
      = render "devise/shared/links"
    .header__left  
  .main
    .main__box
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          %br/
          = f.text_field :name ,class: 'input-default',placeholder:"Name"
        .field
          = f.label :image
          %br/
          = f.image_field :image ,autocomplete: "image"
        .field
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder:"Email",class: 'input-default'
        .field
          %br/
          = f.password_field :password, autocomplete: "new-password" ,placeholder:"Password (6 characters minimum)",class: 'input-default'
        .field
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password" ,placeholder:"Password_confirmation",class: 'input-default'
        .field
          %br/
          = f.text_field :genre ,class: 'input-default',placeholder:"Genre"
        .actions
          = f.submit "Sign up",class:"submit"
      = render "shops/shared/links"


