.wrapper
  .header
    .back
      =link_to root_path do
        = icon('fas','home')
    .sign_upfalse
      = link_to new_registration_path(resource_name) do
        Sign up
    .sign_intrue
      Sign in
  .main
    .main__box
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email" ,class: 'input-default',placeholder:"Email"
        .field
          %br/
          = f.password_field :password, autocomplete: "current-password" ,class: 'input-default',placeholder:"Password"
        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            = f.label :remember_me
        .actions
          = f.submit "Log in",class:"submit"
      = render "shops/shared/links"
